            { hanzi: "Êò®Â§©", pinyin: "zu√≥tiƒÅn", translation: "‡∫°‡∫∑‡ªâ‡∫ß‡∫≤‡∫ô‡∫ô‡∫µ‡ªâ", example: "ÊàëÊò®Â§©Ê≤°ÂéªÂ≠¶Ê†°„ÄÇ(W«í zu√≥tiƒÅn m√©i q√π xu√©xi√†o.)", example_lao: "‡∫°‡∫∑‡ªâ‡∫ß‡∫≤‡∫ô‡∫ô‡∫µ‡ªâ‡∫Ç‡ªâ‡∫≠‡∫ç‡∫ö‡ªç‡ªà‡ªÑ‡∫î‡ªâ‡ªÑ‡∫õ‡ªÇ‡∫Æ‡∫á‡∫Æ‡∫Ω‡∫ô" },
            { hanzi: "Âùê", pinyin: "zu√≤", translation: "‡∫ô‡∫±‡ªà‡∫á", example: "ËØ∑Âùê„ÄÇ(Q«êng zu√≤.)", example_lao: "‡ªÄ‡∫ä‡∫µ‡∫ô‡∫ô‡∫±‡ªà‡∫á" },
            { hanzi: "ÂÅö", pinyin: "zu√≤", translation: "‡ªÄ‡∫Æ‡∫±‡∫î", example: "‰Ω†Âú®ÂÅö‰ªÄ‰πàÔºü(N«ê z√†i zu√≤ sh√©nme?)", example_lao: "‡ªÄ‡∫à‡∫ª‡ªâ‡∫≤‡∫Å‡∫≥‡∫•‡∫±‡∫á‡ªÄ‡∫Æ‡∫±‡∫î‡∫´‡∫ç‡∫±‡∫á‡∫¢‡∫π‡ªà?" }
        ];

        // --- DOM Elements ---
        const hanziDisplay = document.getElementById('hanzi-display');
        const questionText = document.getElementById('question-text');
        const optionsContainer = document.getElementById('options-container');
        const resultContainer = document.getElementById('result-container');
        const resultText = document.getElementById('result-text');
        const explanationText = document.getElementById('explanation-text');
        const exampleText = document.getElementById('example-text');
        const nextButton = document.getElementById('next-button');
        const speakButton = document.getElementById('speak-button');
        
        // --- State ---
        let currentWord = {};
        let shuffledVocab = [];
        let wordIndex = 0;

        // --- Functions ---

        /**
         * Shuffles array in place.
         * @param {Array} array items An array containing the items.
         */
        function shuffleArray(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
        }

        /**
         * Set up and display the next question.
         */
        function loadNextQuestion() {
            // Reset UI
            resultContainer.classList.add('hidden');
            resultContainer.classList.remove('correct', 'incorrect');
            nextButton.classList.add('hidden');
            optionsContainer.innerHTML = '';

            // Check if we need to reshuffle the vocabulary list
            if (wordIndex >= vocabulary.length) {
                wordIndex = 0;
                shuffleArray(vocabulary);
            }

            currentWord = vocabulary[wordIndex];
            wordIndex++;

            // Display the word
            hanziDisplay.textContent = currentWord.hanzi;
            questionText.textContent = `‡∫Ñ‡∫≥‡∫ß‡ªà‡∫≤ "${currentWord.hanzi}" ‡ªù‡∫≤‡∫ç‡∫Ñ‡∫ß‡∫≤‡∫°‡∫ß‡ªà‡∫≤‡ªÅ‡∫ô‡∫ß‡ªÉ‡∫î?`;

            // Generate answer options
            const options = getOptions(currentWord.translation);
            
            // Create and append option buttons
            options.forEach(option => {
                const button = document.createElement('button');
                button.textContent = option;
                button.classList.add('w-full', 'text-left', 'p-4', 'rounded-lg', 'border', 'border-slate-300', 'bg-slate-50', 'hover:bg-slate-100', 'hover:border-indigo-500', 'focus:outline-none', 'focus:ring-2', 'focus:ring-indigo-500', 'btn');
                button.onclick = () => checkAnswer(option, button);
                optionsContainer.appendChild(button);
            });
        }

        /**
         * Create an array of 4 options, including the correct answer and 3 distractors.
         * @param {string} correctAnswer The correct translation.
         * @returns {Array<string>} A shuffled array of 4 options.
         */
        function getOptions(correctAnswer) {
            const options = [correctAnswer];
            while (options.length < 4) {
                const randomWord = vocabulary[Math.floor(Math.random() * vocabulary.length)];
                const randomTranslation = randomWord.translation;
                if (!options.includes(randomTranslation)) {
                    options.push(randomTranslation);
                }
            }
            shuffleArray(options);
            return options;
        }

        /**
         * Check if the selected answer is correct and display feedback.
         * @param {string} selectedAnswer The answer chosen by the user.
         * @param {HTMLElement} selectedButton The button element that was clicked.
         */
        function checkAnswer(selectedAnswer, selectedButton) {
            const isCorrect = selectedAnswer === currentWord.translation;

            // Disable all option buttons
            Array.from(optionsContainer.children).forEach(btn => {
                btn.disabled = true;
                // Highlight correct and incorrect answers
                if (btn.textContent === currentWord.translation) {
                    btn.classList.add('bg-green-100', 'border-green-500');
                } else if (btn === selectedButton) {
                    btn.classList.add('bg-red-100', 'border-red-500');
                }
            });

            // Display result
            if (isCorrect) {
                resultContainer.classList.add('correct');
                resultText.textContent = '‚úÖ ‡∫ñ‡∫∑‡∫Å‡∫ï‡ªâ‡∫≠‡∫á!';
                resultText.className = 'text-lg font-bold mb-2 text-green-700';
            } else {
                resultContainer.classList.add('incorrect');
                resultText.textContent = '‚ùå ‡∫ú‡∫¥‡∫î';
                resultText.className = 'text-lg font-bold mb-2 text-red-700';
            }

            explanationText.innerHTML = `üìò <strong>‡∫Ñ‡∫≥‡∫≠‡∫∞‡∫ó‡∫¥‡∫ö‡∫≤‡∫ç:</strong> "${currentWord.hanzi}" (${currentWord.pinyin}) ‡ªù‡∫≤‡∫ç‡ªÄ‡∫ñ‡∫¥‡∫á <strong>${currentWord.translation}</strong>`;
            exampleText.innerHTML = `üà∂ <strong>‡∫ï‡∫ª‡∫ß‡∫¢‡ªà‡∫≤‡∫á:</strong> ${currentWord.example} = ${currentWord.example_lao}`;
            
            resultContainer.classList.remove('hidden');
            nextButton.classList.remove('hidden');
        }

        /**
         * Use the Web Speech API to pronounce the Chinese word.
         */
        function speakCurrentWord() {
            if ('speechSynthesis' in window) {
                const utterance = new SpeechSynthesisUtterance(currentWord.hanzi);
                utterance.lang = 'zh-CN'; // Set language to Mandarin Chinese
                utterance.rate = 0.8;
                window.speechSynthesis.speak(utterance);
            } else {
                alert('‡∫Ç‡ªç‡∫≠‡∫∞‡ªÑ‡∫û, ‡ªÄ‡∫ö‡∫ª‡∫≤‡ªÄ‡∫ä‡∫µ‡∫Ç‡∫≠‡∫á‡∫ó‡ªà‡∫≤‡∫ô‡∫ö‡ªç‡ªà‡∫Æ‡∫≠‡∫á‡∫Æ‡∫±‡∫ö‡∫Å‡∫≤‡∫ô‡∫≠‡ªà‡∫≤‡∫ô‡∫≠‡∫≠‡∫Å‡∫™‡∫Ω‡∫á');
            }
        }
        
        // --- Event Listeners ---
        nextButton.addEventListener('click', loadNextQuestion);
        speakButton.addEventListener('click', speakCurrentWord);

        // --- Initial Load ---
        shuffleArray(vocabulary);
        loadNextQuestion();

    </script>
</body>
</html>
